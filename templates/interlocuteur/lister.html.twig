<html>
    <head>
        <meta charset="UTF-8">
        <title>Liste des interlocuteurs</title>
        {% include('./component/css.html.twig') %}
    </head>
    <body>
     {% include('./component/menu.html.twig') %}
        <section id="main-content">
      <section class="wrapper">
        <div class="row">
          <div class="col-lg-9 main-chart">
           
    {% if pInterlocuteur != null %}
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
           
        <h4>Interlocuteur : Liste</h4>
                 

              <input class='form-control' id='search_group' name="search_group" onkeyup="search_bar()" placeholder="Entrez une information d'un interlocuteur">        
                <table id='table_group' class="table table-bordered table-striped table-condensed">
        <tr>
                      <th>Nom</th>
                      <th>Prénom</th>
                      <td>Téléphone</td>
                      <th>Mail</th>
                     
                    </tr>
        {% for e in pInterlocuteur %}
        <tr>
            <td><a href="{{ path('interlocuteurConsulter', { 'id': e.id }) }}">{{ e.nom }}</a> </td>
            <td>{{ e.prenom }}</td>
            <td>{{ e.tel }}</td>
            <td>{{ e.mail }}</td>
        {% endfor %}
        {% else %}
         <tr>
        <td>Aucun interlocuteur n'a été trouvé.</td>
        </tr>
    {% endif %}
</table>
	</div>
</div>
</section>
</section>
	 {% include('./component/script.html.twig') %}
    </body>
</html>